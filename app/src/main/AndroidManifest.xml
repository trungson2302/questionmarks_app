<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sonpham.questionmarks">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/question_mark"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/question_mark"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".MainMenuActivity"
            android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".PlayMusicService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name=".BangdiemActivity"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ResultActivity"
            android:launchMode="singleInstance" />
        <activity android:name=".SettingsActivity"></activity>
        <activity android:name=".HuongdanActivity"></activity>
    </application>

</manifest>